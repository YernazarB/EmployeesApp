@using EmployeesApp.DataAccess.Enums
@using System.Text.Json
@model EmployeesViewModel
@{
    ViewData["Title"] = "The list of employees";
}
<div class="container">
	<div class="table-title">
		<div class="row">
			<div class="col-sm-6">
				<a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal"><span>Add New Employee</span></a>
			</div>
		</div>
	</div>
	<div class="form-group pull-right">
		<input type="text" class="search form-control" placeholder="Search ...">
	</div>
	<span class="counter pull-right"></span>
	<table class="table table-hover table-bordered results">
		<thead>
			<tr>
				<th class="col-md-3 col-xs-3">Name</th>
				<th class="col-md-3 col-xs-3">SecondName</th>
				<th class="col-md-1 col-xs-1">Age</th>
				<th class="col-md-2 col-xs-2">Sex</th>
				<th class="col-md-3 col-xs-3">Deparment</th>
				<th class="col-md-3 col-xs-3">Experience</th>
				<th class="col-md-3 col-xs-3">Actions</th>
			</tr>
			<tr class="warning no-result">
				<td colspan="4"><i class="fa fa-warning"></i> No result</td>
			</tr>
		</thead>
		<tbody>
			@foreach (var employee in Model.Employees)
			{
				<tr>
					<td>@employee.Name</td>
					<td>@employee.SecondName</td>
					<td>@employee.Age</td>
					<td>@employee.Sex.ToString()</td>
					<td>@employee.DepartmentName</td>
					<td>@employee.ProgrammingLanguage</td>
					<td>
						<a href="#editEmployeeModal" class="edit" data-toggle="modal" onclick="fillCreateUpdateModal(@employee.Id)">Edit</a>
						<a href="#deleteEmployeeModal" class="delete" data-toggle="modal" onclick="fillDeleteModal(@employee.Id)">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
<div id="addEmployeeModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<form method="post" action="Employees/Create">
				<div class="modal-header">
					<h4 id="create-modalHeader" class="modal-title">Add Employee</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				<div class="modal-body">
					<input id="create-id" name="id" type="text" class="form-control" hidden>
					<div class="form-group">
						<label for="create-name">Name</label>
						<input id="create-name" name="name" type="text" class="form-control" required>
					</div>
					<div class="form-group">
						<label for="create-secondName">SecondName</label>
						<input id="create-secondName" name="secondName" type="text" class="form-control" required>
					</div>
					<div class="form-group">
						<label for="create-birthDate">Birth date</label>
						<input id="create-birthDate" name="birthDate" type='date' class="form-control" required />
					</div>
					<div class="form-group">
						<label for="create-sex">Sex: </label>
						<select id="create-sex" name="sex" class="form-select" required>
							<option>Not selected</option>
							<option value="1">Male</option>
							<option value="2">Female</option>
						</select>
					</div>
					<div class="form-group">
						<label for="create-departmentId">Department: </label>
						<select id="create-departmentId" name="departmentId" class="form-select" required>
							<option>Not selected</option>
							@foreach(var department in Model.Departments)
							{
								<option value="@department.Id">@department.Name</option>
							}
						</select>
					</div>
					<div class="form-group">
						<label for="create-programmingLanguageId">Programming languages: </label>
						<select id="create-programmingLanguageId" name="programmingLanguageId" class="form-select" required>
							<option>Not selected</option>
							@foreach (var language in Model.ProgrammingLanguages)
							{
								<option value="@language.Id">@language.Name</option>
							}
						</select>
					</div>
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
					<input id="create-submitButton" type="submit" class="btn btn-success" value="Add">
				</div>
			</form>
		</div>
	</div>
</div>
<div id="editEmployeeModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<form method="post" action="Employees/Update">
				<div class="modal-header">
					<h4 id="edit-modalHeader" class="modal-title">Edit Employee</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				<div class="modal-body">
					<input id="edit-id" name="id" type="text" class="form-control" hidden>
					<div class="form-group">
						<label for="edit-name">Name</label>
						<input id="edit-name" name="name" type="text" class="form-control" required>
					</div>
					<div class="form-group">
						<label for="edit-secondName">SecondName</label>
						<input id="edit-secondName" name="secondName" type="text" class="form-control" required>
					</div>
					<div class="form-group">
						<label for="edit-birthDate">Birth date</label>
						<input id="edit-birthDate" name="birthDate" type='date' class="form-control" required />
					</div>
					<div class="form-group">
						<label for="edit-sex">Sex: </label>
						<select id="edit-sex" name="sex" class="form-select" required>
							<option value="1">Male</option>
							<option value="2">Female</option>
						</select>
					</div>
					<div class="form-group">
						<label for="edit-departmentId">Department: </label>
						<select id="edit-departmentId" name="departmentId" class="form-select" required>
							@foreach (var department in Model.Departments)
							{
								<option value="@department.Id">@department.Name</option>
							}
						</select>
					</div>
					<div class="form-group">
						<label for="edit-programmingLanguageId">Programming languages: </label>
						<select id="edit-programmingLanguageId" name="programmingLanguageId" class="form-select" required>
							@foreach (var language in Model.ProgrammingLanguages)
							{
								<option value="@language.Id">@language.Name</option>
							}
						</select>
					</div>
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
					<input id="edit-submitButton" type="submit" class="btn btn-success" value="Edit">
				</div>
			</form>
		</div>
	</div>
</div>
<!-- Delete Modal HTML -->
<div id="deleteEmployeeModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<form action="Employees/Delete">
				<input id="delete-employeeId" name="employeeId" type="text" class="form-control" hidden>
				<div class="modal-header">
					<h4 class="modal-title">Delete Employee</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				<div class="modal-body">
					<p>Are you sure you want to delete these Records?</p>
					<p class="text-warning"><small>This action cannot be undone.</small></p>
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
					<input type="submit" class="btn btn-danger" value="Delete">
				</div>
			</form>
		</div>
	</div>
</div>
<script>
	let model = @Html.Raw(JsonSerializer.Serialize(Model));
	
	function fillCreateUpdateModal(employeeId) {
		let idInput = document.getElementById("edit-id");
		let nameInput = document.getElementById("edit-name");
		let secondNameInput = document.getElementById("edit-secondName");
		let birthDateInput = document.getElementById("edit-birthDate");
		let sexInput = document.getElementById("edit-sex");
		let departmentIdInput = document.getElementById("edit-departmentId");
		let programmingLanguageIdInput = document.getElementById("edit-programmingLanguageId");

		let employee = model.Employees.find(x => x.Id == employeeId);
		console.log(employee);

		let birthDate = new Date(employee.BirthDate);
		let birthDay = birthDate.getDate();
		let birthMonth = birthDate.getMonth() + 1;
		let birthDayText = birthDay < 10 ? '0' + birthDay : birthDay;
		let birthMonthText = birthMonth < 10 ? '0' + birthMonth : birthMonth;

		let birthDateValue = `${birthDate.getFullYear()}-${birthMonthText}-${birthDayText}`;

		idInput.value = employee.Id;
		nameInput.value = employee.Name;
		secondNameInput.value = employee.SecondName;
		birthDateInput.value = birthDateValue;
		sexInput.value = employee.Sex;
		departmentIdInput.value = employee.DepartmentId;
		programmingLanguageIdInput.value = employee.ProgrammingLanguageId;
	}

	function fillDeleteModal(employeeId) {
		let employeeIdInput = document.getElementById("delete-employeeId");
		employeeIdInput.value = employeeId;
	}

</script>